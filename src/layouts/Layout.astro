---


const { title } = Astro.props;

import Navbar from '../components/Nav';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center w-full">
	<Navbar client:load/>
    <slot />
    <p class="w-full text-center my-10 text-[#818181] font-bold">created by Alex Rodriguez - devChallenges.io</p>

  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@200&family=Lora:wght@500;700&family=Montserrat:wght@400;700&display=swap");
  body {
    background: #181719;
  }
</style>
